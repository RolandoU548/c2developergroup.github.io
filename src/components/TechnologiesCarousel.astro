<script>
  import {
    Splide,
    type Options as SplideOptions,
    type ResponsiveOptions as SplideResponsiveOptions,
  } from "@splidejs/splide";
  import { Intersection } from "@splidejs/splide-extension-intersection";
  import { AutoScroll } from "@splidejs/splide-extension-auto-scroll";

  const optionsBreakpoints: Record<number, SplideResponsiveOptions> = {
    2100: {
      // 4xl
      gap: "5rem",
      width: "15%",
    },
    1800: {
      // 3xl
      gap: "5rem",
      width: "15%",
    },
    1536: {
      // 2xl
      gap: "5rem",
      width: "15%",
    },
    1280: {
      // xl
      gap: "5rem",
      width: "15%",
    },
    1024: {
      // lg
      gap: "5rem",
      width: "22.5%",
    },
    768: {
      // md
      gap: "5rem",
      width: "50%",
    },
    640: {
      // sm
      gap: "5rem",
      width: "50%",
    },
  };

  const optionsTtb: SplideOptions = {
    type: "loop",
    direction: "ttb",
    focus: "center",
    height: "80vh",
    width: "15%",
    autoWidth: true,
    arrows: false,
    gap: "5rem",
    perPage: 3,
    pagination: false,
    autoScroll: {
      speed: -1,
    },
    breakpoints: optionsBreakpoints,
  };

  const optionsBtt: SplideOptions = {
    type: "loop",
    direction: "ttb",
    focus: "center",
    height: "80vh",
    width: "15%",
    autoWidth: true,
    arrows: false,
    gap: "5rem",
    perPage: 3,
    pagination: false,
    autoScroll: {
      speed: 1,
    },
    breakpoints: optionsBreakpoints,
  };

  class C2TechsCarousel extends HTMLElement {
    splide: Splide | null = null;

    constructor() {
      super();
    }

    connectedCallback() {
      if (this.dataset.direction == "ttb") {
        this.splide = new Splide(this, optionsTtb);
      } else if (this.dataset.direction == "btt") {
        this.splide = new Splide(this, optionsBtt);
      } else {
        throw new Error("direction not valid");
      }
      this.splide.mount({ Intersection, AutoScroll });
    }

    disconnectedCallback() {
      this.splide?.destroy();
    }
  }
  window.customElements.define("c2dev-techs-carousel", C2TechsCarousel);
</script>
